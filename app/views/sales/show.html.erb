
<div class="title"> <%= @sale.project.name %></div>
<div class="sale-show-gross">Sold for: <%= number_to_currency(@sale.gross) %></div>
<div class="sale-show-date">Sold on: <%= @sale.date %></div>
<% if @sale.sales_channel %>
  <div class="sale-show-date">Sold at: <%= @sale.sales_channel.name %></div>
  <div class="edit-back">
<% else %>
  <div class="edit-back">
  <%= link_to 'Add a Sales Channel', new_sales_channel_path(sale_id: @sale.id) %> |
<% end %>
  <%= link_to 'Edit', edit_sale_path(@sale) %> |
  <%= link_to 'Back to Sales', sales_path %>
</div>
