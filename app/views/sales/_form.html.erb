<%= form_for(@sale) do |f| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% @sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :project_id, value: @sale.project_id %>
  </div>
  <div class="field">
    <%= f.hidden_field :sales_channel_id, value: @sale.sales_channel_id || "" %>
  </div>
  <div class="field">
    <%= f.label :gross, value: "Sale Amount" %><br>
    <%= f.number_field :gross, :class => 'text_field', :step => 0.01, value: @sale.gross || "" %>
  </div>
  <div class="field">
    <%= f.label :date, value: "Sale Date" %><br>
    <%= f.date_select :date, value: @sale.date || "" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
