<div class="title">
 My Business Expenses
 <%= form_tag business_expenses_path, method: :get do %>
   <%= text_field_tag :search, params[:search] %>
   <%= submit_tag "Search", name: nil%>
 <% end %>
</div>
<h3><%= link_to 'New Business Expense', new_business_expense_path %> <%= link_to 'See Project Costs Breakdowns', project_costs_path %></h3>
<% if @business_expenses %>
   <% @business_expenses.each do |business_expense| %>
   <div class="cards">
     <div class="card">
       <div class="card-header">
        <h2><%= business_expense.name.capitalize %></h2>
        <div class="details">
          <%= link_to 'Details', business_expense %>
          <%= link_to (image_tag asset_url('edit.png'), class: "index-icon"), edit_business_expense_path(business_expense) %>
          <%= link_to (image_tag asset_url('destroy.png'), class: "index-icon"), business_expense, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        </div>
        <div class="index-card">
          <p><%= business_expense.description %></p>
          <p>Amount: <%= number_to_currency(business_expense.amount) %></br>
          Recurring: <%= business_expense.recurring %></p>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
<% end %>
