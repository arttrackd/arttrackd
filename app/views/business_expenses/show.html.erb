<div class="title"></div>
<div class="cards">
  <div class="card">
    <div class="card-header">
      <h1><%= @business_expense.name %></h1>
    </div>
    <div class="index-card">
      <p><%= @business_expense.description %></p>
      <p>Amount: <%= number_to_currency(@business_expense.amount) %> </p>
      <p><% if @business_expense.recurring %>Recurring<% else %>Not recurring<% end %></vp>
      <div class="details">
        <p><%= link_to (image_tag asset_url('edit.png'), class: "index-icon"), edit_business_expense_path(@business_expense) %>
        <%= link_to (image_tag asset_url('destroy.png'), class: "index-icon"), @business_expense, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Back to Business Expenses', business_expenses_path %></p>
      </div>
    </div>
  </div>
</div>
