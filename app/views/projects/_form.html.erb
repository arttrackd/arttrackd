<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.hidden_field :user_id, value: @project.user_id || @current_user.id %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, value: @project.name || "" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, value: @project.description || "" %>
  </div>
  <br>

  <div><h4> Materials: </h4></div>
<div class="material-form">
  <%= f.fields_for :material_uses do |ff| %>
    <div class="field">
      <%= ff.label :name %><br>
      <%= ff.text_field :name %>
    </div>
    <div class="field">
      <%= ff.label :description %><br>
      <%= ff.text_area :description%>
    </div>
    <div class="field">
      <%= ff.label :units %><br>
      <%= ff.number_field :units%>
    </div>
    <hr />
  <% end %>
</div>


<div><h4> Project Costs: </h4></div>
<div class="material-form">
  <%= f.fields_for :project_costs do |fff| %>
    <div class="field">
      <%= fff.label :cost_type %><br>
      <%= fff.text_field :cost_type%>
    </div>
    <div class="field">
      <%= fff.label :amount %><br>
      <%= fff.number_field :amount%>
    </div>
    <hr />
  <% end %>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
