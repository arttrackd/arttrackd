<div class="title"></div>
<div class="cards">
  <div class="card">
    <div class="card-header">
      <h1><%= @material_purchase.name %></h1>
    </div>
    <div class="index-card">
      <p>Cost: <%= number_to_currency(@material_purchase.cost) %></p>
      <p>Units: <%= @material_purchase.units %></p>
      <p>Units remaining: <%= @material_purchase.units_remaining %></p>
      <% if @material_purchase.receipt.instance.receipt_updated_at != nil %>
        <p>Receipt:</br><%= image_tag @material_purchase.receipt.url%></p>
        <p><%= link_to (image_tag asset_url('edit.png'), class: "index-icon"), edit_material_purchase_path(@material_purchase) %>
      <% else %>
        <%= link_to (image_tag asset_url('edit.png'), class: "index-icon"), edit_material_purchase_path(@material_purchase) %>
        <%= link_to 'Add a Receipt Image', edit_material_purchase_path %>
      <% end %>
      <%= link_to (image_tag asset_url('destroy.png'), class: "index-icon"), @material_purchase, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to 'Back to Materials Inventory', material_purchases_path %></p>
    </div>
  </div>
</div>
