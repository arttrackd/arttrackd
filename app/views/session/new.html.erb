
<div id="js-parallax-window" class="parallax-window">
  <div class="parallax-static-content">
    <div class="background-ghost">
      <div class="cards">
        <div class="smaller-percent">
          <div class="card">
            <div class="some-height-padding login">
              <h1>Log In</h1>
              <div class="login-boxes">
                <%= form_tag login_path do %>
                  <p>
                    <strong><%= label_tag :email %></strong>
                    <%= email_field_tag :email %>
                  </p>

                  <p>
                    <strong><%= label_tag :password %></strong>
                    <%= password_field_tag :password %>
                  </p>
                  </div>
                  <%= submit_tag'Log In' %>
                <br />
              <div><p>For new users, sign up <%= link_to "here", signup_path %></p></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="js-parallax-background" class="parallax-background"></div>
</div>
