<div class="background-ghost">
  <div class="cards">
    <div class="smaller-percent">
      <div class="card">
        <div class="some-height-padding login">
          <h1>Log In</h1>
          <div class="login-boxes">
            <%= form_tag login_path do %>
              <p>
                <%= email_field_tag :email, nil, placeholder: 'Email' %>
              </p>

              <p>
                <%= password_field_tag :password, nil, placeholder: 'Password' %>
              </p>

              <%= submit_tag'Log In' %>
                </div>
            <br />
          <div>
            <p>For new users, sign up <%= link_to "here", signup_path %></p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
