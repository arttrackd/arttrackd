
<div id="js-parallax-window" class="parallax-window">
  <div class="parallax-static-content">
    <div class="background-ghost">
      <div class="cards">
        <div class="smaller-percent">
          <div class="card">
            <div class="some-height-padding">
              <h1>Log In!</h1>

              <%= form_tag login_path do %>
                <p>
                  <strong><%= label_tag :email %></strong></br>
                  <%= email_field_tag :email %>
                </p>

                <p>
                  <strong><%= label_tag :password %></strong></br>
                  <%= password_field_tag :password %>
                </p>

                <%= submit_tag'Log In' %>
              <br />
              <div><p>For new users, sign up <%= link_to "here!", signup_path %></p></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="js-parallax-background" class="parallax-background"></div>
</div>
