<div class="new-goal"><%= link_to 'New Sales Goal', new_sales_goal_path %></div>

<h1>Listing Sale Goals</h1>
<% @goals.each do |goal| %>
  <% end_time = goal.start_time + eval(goal.length_of_time.tr(' ','.')) %>
  <% active = end_time >= Date.today %>
  <div class="index-goal-amount">Goal: <%= number_to_currency(goal.amount) %></div>

  <div class"index-goal-details">
    <div class="index-goal-length-of-time gd"> Duration: <%= goal.length_of_time %></div>
    <div class="index-goal-start-time gd"> Started: <%= goal.start_time %></div>
    <div class="index-goal-end-time gd">
      <%= active ? "Ends" : "Ended" %>:
      <%= end_time %>
    </div>
    <div class="index-goal-success gd">
      <% if goal.success %>
        ACHIEVED!
      <% else %>
        <%= active ? "Not yet achieved" : "Did not achieve" %>
      <% end %>
    </div>
  </div>

  <div class="index-goal-edit">
    <%= link_to 'Show', goal %>
    <%= link_to 'Edit', edit_sales_goal_path(goal) %>
    <%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <br>
  <hr />
<% end %>
