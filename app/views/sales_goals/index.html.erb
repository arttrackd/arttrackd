<h1 class="title goal-active">My Current Sales Goals</h1>
<h3><%= link_to 'New Sales Goal', new_sales_goal_path %></h3>
<% if @goals %>
  <% @goals.each do |goal| %>
    <% active = goal.end_time >= Date.today %>
    <% if active %>
    <div class="cards">
      <div class="card">
        <div class="card-header">
          <h2>Goal: <%= number_to_currency(goal.amount) %> in sales at <%= SalesChannel.find(goal.sales_channel_id).name if goal.sales_channel_id %></h2>
        <div class="details">
          <%= link_to 'Details', goal %>
          <%= link_to (image_tag asset_url('edit.png'), class: "index-icon"), edit_sales_goal_path(goal) %>
          <%= link_to (image_tag asset_url('destroy.png'), class: "index-icon"), goal, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
      <div class="index-card">
        <div class"goal-index-details">
          <p>
          Duration: <%= goal.length_of_time %></br>
          Started: <%= goal.start_time.strftime("%B %d, %Y") %></br>
            <%= active ? "Ends" : "Ended" %>:
            <%= goal.end_time.strftime("%B %d, %Y") %>
          </p>
          <div class="goal-index-success">
            <div class="progress-bar-indication">
              <% percent_completion = (SalesGoal.percent_completion(goal) * 100).floor %>
              <span class="meter" style="<%= "width: #{percent_completion}%" %>" >
                <p><%= percent_completion %>%</p>
              </span>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
    <% end %>
  <% end %>
  <h1 class="title goal-inactive">My Past Sales Goals</h1>
  <% @goals.each do |goal| %>
    <% active = goal.end_time >= Date.today %>
    <% if !active %>
      <div class="cards">
        <div class="card">
          <div class="card-header">
            <h2>Goal: <%= number_to_currency(goal.amount) %></h2>
          <div class="details">
            <%= link_to 'Details', goal %>
            <%= link_to (image_tag asset_url('edit.png'), class: "index-icon"), edit_sales_goal_path(goal) %>
            <%= link_to (image_tag asset_url('destroy.png'), class: "index-icon"), goal, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
        <div class="index-card">
          <div class"goal-index-details">
            <p>
            Duration: <%= goal.length_of_time %></br>
            Started: <%= goal.start_time.strftime("%B %d, %Y") %></br>
              <%= active ? "Ends" : "Ended" %>:
              <%= goal.end_time.strftime("%B %d, %Y") %>
            </p>
            <div class="goal-index-success">
              <div class="progress-bar-indication">
                <% percent_completion = (SalesGoal.percent_completion(goal) * 100).floor %>
                <span class="meter" style="<%= "width: #{percent_completion}%" %>" >
                  <p><%= percent_completion %>%</p>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
<% else %>
<% end %>
