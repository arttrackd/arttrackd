<div class="login-boxes">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <strong><%= f.label :name %></strong>
    <%= f.text_field :name, value: @user.name || "" %>
  </p>
  <p>
    <strong><%= f.label :email %></strong>
    <%= f.text_field :email, value: @user.email || "" %>
  </p>
  <p>
    <strong><%= f.label :password %></strong>
    <%= f.password_field :password %>
  </p>
  <p>
    <strong><%= f.label :hourly_rate %></strong>
    <%= f.number_field :hourly_rate, :class => 'text_field', :step => 0.01 %>
  </p>
</div>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
