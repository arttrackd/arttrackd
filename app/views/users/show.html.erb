<p id="notice"><%= notice %></p>
<%= image_tag asset_url('julie_placeholder.jpg'), class: "julie" %>
<div class="user-information">
<p>
  <strong>Name:</strong>
  <%= @user.name.upcase %>
</p>

<p>
  <strong>E-mail:</strong>
  <%= @user.email %>
</p>

<p>
  <%= @user.time_zone %>
</p>
</div>
<table class="user-projects">
  <thead>
    <tr>
      <th>Name of Piece</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @user.projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %> </td>
      </tr>
      <% project.sales.each do |sales| %>
        <tr>
          <td>$<%= sales.gross %></td>
          <td>Sold on: <%= sales.date %> </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<p>
  <% @user.sales_goals.each do |goals| %>
    Goal: <%= goals.amount %> <br />
    For: <%= goals.length_of_time %>
  <% end %>
</p>

<table class="time-table">
  <thead>
    <tr>
      <th>Project</th>
      <th>Start Time</th>
      <th>Stop Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @user.projects.each do |project| %>
  <% project.time_entries.each do |time| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= time.start_time %> </td>
        <td><%= time.stop_time %> </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<div class="navigation">
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
</div>
