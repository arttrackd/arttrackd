<h1>My Material Uses</h1>
<% @projects.each do |project| %>
 <% if project.material_uses.length > 0 %>
  <div class="project-index-name">Project: <%= project.name %></div>
  <div> <h2>Material(s):</h2></div>
  <% project.material_uses.each do |material_use| %>
    <div class="material-use-index-name"><%= material_use.name %></div>
    <br />
    <div class="material-use-index-units">Units: <%= material_use.units %></div>

    <div class="material-use-index-edit">
      <%= link_to 'Show', material_use %>
      <%= link_to 'Edit', edit_material_use_path(material_use) %>
      <%= link_to 'Destroy', material_use, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <br />
    <hr />

    <% end %>
    <br />
  <% end %>
<% end %>
